extends index.jade

block content
  style body {background-color: #B2DFDB}
  div(class="container col s12 m4 l2 vertical-center")
    div(class="card")
      div(class="card-content")
        form(action="javascript:userLogin()", method="post", class="form-signin")
          h1!= '<strong>Slate</strong>IT'
          div(class="input-field")
            i(class="material-icons prefix") account_circle
            input(placeholder="Username", id="username", type="text", class="form-control validate", name="username" required)
          div(class="input-field")
            i(class="material-icons prefix") vpn_key
            input(placeholder="Password", id="password", type="password", class="form-control validate", name="password" required)
          div(class="card-action")
            i(style="text-align: center;")
              button(class="btn waves-effect waves-light", type="submit", name="action") Login